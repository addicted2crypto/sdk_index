generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Token {
  id          String  @id @default(uuid())
  address     String  @unique
  fromAddress String
  toAddress   String?
  value       BigInt
  type        EventType
  name        String
  symbol      String
  decimals    Int
  events      TokenEvent[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

enum EventType {
  TRANSFER
  MINT
  BURN
  APPROVAL
  SWAP
  OTHER

}

model TokenEvent {
  id          String  @id @default(uuid())
  token     Token @relation(fields: [tokenId], references: [id])
  tokenId     String
  type        String
  from        String?
  to          String?
  txHash     String
  blockNumber Int
  timestamp   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}